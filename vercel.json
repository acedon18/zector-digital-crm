{
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "buildCommand": "cd pulse-main && npm install && npm run build",
  "outputDirectory": "pulse-main/dist",
  "installCommand": "echo 'Skipping root install'",
  "framework": null,
  "rewrites": [
    { "source": "/api/track", "destination": "/api/track" },
    { "source": "/api/visitors/(.*)", "destination": "/api/visitors/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/track": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
